@{
    Layout = "_Layout";
    ViewData["Title"] = "Trang chủ";
    var BaseUrl = ViewBag.BaseUrl;
}

<div class="top-bar">
    <div class="breadcrumb slide-in-left">
        <a href="#">Trang chủ</a> &gt;
        <a href="#">Tin tức - Sự kiện</a>
    </div>
    <div class="filter slide-in-left">
        <div>
            <button class="filter-button active" data-filter="all">Tất cả</button>
            <button class="filter-button" data-filter="news">Tin tức</button>
            <button class="filter-button" data-filter="events">Sự kiện</button>
        </div>
        <input placeholder="Tìm kiếm bài viết..." type="text" />
    </div>
</div>
<div class="news-grid"></div>
<div id="pagination-container"></div>
<div id="loading-spinner" class="loading-spinner" style="display:none;">
    <div class="spinner"></div>
</div>

@section Scripts {
    <script>
        var BaseUrl = "@BaseUrl";
    </script>
    <script src="~/js/index.js"></script>
}
